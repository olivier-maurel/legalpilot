{% extends 'base.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
    <h1>Character</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ character.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ character.name }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ character.level }}</td>
            </tr>
            <tr>
                <th>Experience</th>
                <td>{{ character.experience }}</td>
            </tr>
            <tr>
                <th>Strong</th>
                <td>{{ character.strong }}</td>
            </tr>
            <tr>
                <th>Speed</th>
                <td>{{ character.speed }}</td>
            </tr>
            <tr>
                <th>Guard</th>
                <td>{{ character.guard }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ character.image }}</td>
            </tr>
            <tr>
                <th>Victory</th>
                <td>{{ character.victory }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ character.modifiedAt ? character.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('character_index') }}">back to list</a>

    <a href="{{ path('character_edit', {'id': character.id}) }}">edit</a>

    {{ include('character/_delete_form.html.twig') }}
{% endblock %}
